package com.saltyFish.user.service;

import com.saltyFish.user.dto.userDto.ProviderDto;

public interface ProviderService extends UserService {

    /**
     *
     * @param userId
     * @return registered provider details
     */
    ProviderDto registerProvider(Long userId);

    /**
     *
     * @param userId
     * @return flag if provider is updated
     */
    ProviderDto updateProvider(Long userId);

    /**
     *
     * @param userId
     * @return flag if provider is deleted
     */
    boolean deleteProvider(Long userId);
}
